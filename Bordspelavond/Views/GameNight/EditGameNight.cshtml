
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Domain.Models.GameNight

@{
    //Address is known to be not null here
#pragma warning disable CS8602
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>Voeg spel toe</title>
    <script src="https://kit.fontawesome.com/601a2a72d3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="http://fonts.cdnfonts.com/css/broadway" rel="stylesheet">
</head>
<body>
<div id="page-container">
    <div id="content-wrap">
        <div class="FormWrapper FormWrapperCreateGameNight">
            <form asp-action="EditGameNight" method="post" class="w-90 p-3">

                <h2>Details spelavond</h2>
                <div class="form-group">
                    <label for="street">Straat</label>
                    <input type="text" name="street" class="form-control" required value="@Model.Address.Street">
                </div>
                <div class="form-group">
                    <label for="houseNumber">Huisnummer</label>
                    <input type="number" name="houseNumber" class="form-control" required value="@Model.Address.HouseNumber">
                </div>
                <div class="form-group">
                    <label for="postalCode">Postcode</label>
                    <input type="text" name="postalCode" class="form-control" required value="@Model.Address.PostalCode">
                </div>
                <div class="form-group">
                    <label for="city">Stad</label>
                    <input type="text" name="city" class="form-control" required value="@Model.Address.City">
                </div>
                <div class="form-group">
                    <label asp-for="DateTime">Datum en tijd</label>
                    <input asp-for="DateTime" class="form-control"/>
                </div>
                <div>
                    <label asp-for="MaxNumberOfPlayers">Maximaal aantal deelnemers</label>
                    <input asp-for="MaxNumberOfPlayers" class="form-control" min="1"/>
                </div>
                <div class="FormCheckWrapper">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Is18Plus">
                        <label class="form-check-label" asp-for="Is18Plus">18 plus</label>
                    </div>
                    <input class="form-check-input" type="hidden" value="" asp-for="VegetarianSnacks">
                    <input class="form-check-input" type="hidden" asp-for="LactoseFreeSnacks">
                    <input class="form-check-input" type="hidden" asp-for="NutFreeSnacks">
                    <input class="form-check-input" type="hidden" asp-for="AlcoholFreeDrinks">
                    <input type="hidden" value="@Model.Id" name="gameNightId"/>

                    <div class="FormButton">
                        <button type="submit" class="btn btn-primary FormButtonCreateGame">Naar spellen toevoegen</button>
                    </div>
                </div>
            </form>
        </div>

    </div>

</div>


</body>
</html>
@{
#pragma warning restore CS8602
}
        
