@model IEnumerable<Domain.Models.BoardGame>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Spel toevoegen</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="http://fonts.cdnfonts.com/css/broadway" rel="stylesheet">

</head>
<body>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
    <tr>
        <th>Naam</th>
        <th>Genre</th>
        <th>Type spel</th>
        <th>ID</th>
        <th></th>
    </tr>
    @{
        foreach (var g in Model)
        {
            <tr>
                <td>@g.Name</td>
                <td>@g.Genre</td>
                <td>@g.TypeOfGame</td>
                <td>@g.Id</td>
                <td>
                    <form action="/BoardGame/GameInfo">
                        <input type="hidden" value="@g.Id" name="gameId"/>
                        <button type="submit" class="btn-primary">Game info</button>
                    </form>
                </td>
            </tr>
        }
    }
    </thead>


</table>
</body>